
@{
    ViewBag.Title = "ShowProfit";
    Layout = "~/Views/Boss.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>ECharts</title>
    <!-- 引入 echarts.js -->
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/echarts引用文件.js"></script>
</head>
<body>
    <!-- 为ECharts准备一个具备大小（宽高）的Dom -->
    <div id="main" style="width: 1000px;height:600px;"></div>
    <script type="text/javascript">
        $(function () {
            var myChart = echarts.init(document.getElementById('main'));
            // 显示标题，图例和空的坐标轴
            myChart.setOption({
                title: {
                    text: '每个月的利润显示'
                },
                tooltip: {},
                legend: {
                    data: ['利润']
                },
                xAxis: {
                    data: []
                },
                yAxis: {},
                series: [{
                    name: '利润',
                    type: 'bar',
                    data: []
                }]
            });

            myChart.showLoading();    //数据加载完之前先显示一段简单的loading动画
            var month = [];    //类别数组（实际用来盛放X轴坐标值）
            var Profit = [];    //销量数组（实际用来盛放Y坐标值）

            $.ajax({
            type: 'get',
                async: true, 
                async: true,            //异步请求（同步请求将会锁住浏览器，用户其他操作必须等待请求完成才可以执行）
                url: "http://localhost:55237/api/Employees/ShowProfit",
                data: {},
                dataType: 'json',        //返回数据形式为json
                success: function (res) {
                    //请求成功时执行该函数内容，result即为服务器返回的json对象
                    if (res) {
                        for (var i = 0; i < res.length; i++)
                        {
                            //alert(result[i].name);
                            month.push(res[i].month);    //挨个取出类别并填入类别数组
                        }
                        for (var i = 0; i < res.length; i++)
                        {
                            Profit.push(res[i].Profit);    //挨个取出销量并填入销量数组
                        }
                        myChart.hideLoading();    //隐藏加载动画
                        myChart.setOption({        //加载数据图表
                        xAxis:
                            {
                            data: month
                            },
                            series: [{
                            // 根据名字对应到相应的系列
                                name: '利润',
                                data: Profit
                            }]
                        });

                    }

                },
                error: function (errorMsg) {
                    //请求失败时执行该函数
                    alert("图表请求数据失败!");
                    myChart.hideLoading();
                }
            })
        })
    </script>
</body>
</html>



















